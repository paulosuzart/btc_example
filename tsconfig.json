{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2017",
            "dom",
            "esnext.asynciterable"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "exclude": [
      "node_modules/**/*"
    ],
    "include": [
      "src/**/*"
    ]

}
